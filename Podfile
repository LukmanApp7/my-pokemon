platform :ios, '14.0'
use_frameworks!

target 'mypokemon' do
  # Networking
  pod 'Alamofire', '~> 5.6'

  # Image caching/loading
  pod 'Kingfisher', '~> 7.0'

  # Reactive programming
  pod 'RxSwift', '~> 6.0'
  pod 'RxCocoa'

  # Loading HUD
  pod 'MBProgressHUD', '~> 1.2'

  # Pager / tab strip
  pod 'XLPagerTabStrip', '~> 8.0'
  
  # Database
  pod 'CouchbaseLite-Swift', '~> 3.2'
end

